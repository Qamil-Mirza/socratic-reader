{
  "manifest_version": 3,
  "name": "Socratic Reader",
  "version": "1.0.0",
  "description": "Read philosophy intentionally with Socratic questioning. Highlights key claims and generates thought-provoking questions.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Socratic Reader"
  },
  "options_page": "options/options.html",
  "commands": {
    "toggle-overlay": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle Socratic Reader overlay"
    }
  }
}
